---
import './hero.css';
import Boton from '../atoms/Boton.astro';
---

<section class="hero">

	<div class="hero__container">
		<div class="text__content">
			<h1 class="hero__title color__gradiente">Mathys C.</h1>
			<p class="hero__text">
				“L'informatique n'est qu'un outil, comme un pinceau ou un crayon. ”
			</p>
			<Boton href="#" texto="En savoir plus"/>
		</div>
    <img
		class="hero__img"
		src="/img/mathys_logo.png"
		alt="Cheruel Mathys"
		width="384"
    	height="384"
	/>
	</div>
</section>
